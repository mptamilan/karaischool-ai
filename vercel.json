{
  "builds": [
    {
      "src": "dist/server/server.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/spa"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/dist/server/server.mjs"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}